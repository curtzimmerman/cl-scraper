<% provide(:title, "Log In") %>

<h1 class="heading center">Log In</h1>

<%= form_for(:session, url: login_path) do |f| %>
	<%= f.label "email" %>
	<%= f.email_field "email" %>

	<%= f.label "password" %>
	<%= f.password_field "password" %>

	<%= f.submit "Log in" %>

<% end %>
New User? <%= link_to "Sign up", signup_path %>