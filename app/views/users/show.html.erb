<% provide(:title, current_user.email) %>

<div class="user">
	<div class="head">
		<h1 class="heading">Searches</h1>
	</div>
	<div class="content">
		<div class="links">
			<%= link_to "New Search", new_user_search_path(@user.id) %>
		</div>
		<table>
			<thead>
				<th>Title</th>
				<th>Location</th>
				<th>Query</th>
				<th></th>
			</thead>
		<%= render partial: "searches/search", collection: @user.searches %>
		</table>
	</div>
</div>