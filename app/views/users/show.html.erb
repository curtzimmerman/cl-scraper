<% provide(:title, current_user.email) %>

<div class="container">
	<h1>Searches</h1>
	<%= link_to "New Search", new_user_search_path(@user.id), class: "btn btn-primary" %>
	<table class="table">
		<thead>
			<th>Title</th>
			<th>Location</th>
			<th>Query</th>
			<th></th>
		</thead>
		<tbody class="table-striped">
			<%= render partial: "searches/search", collection: @user.searches %>
		</tbody>
	</table>
</div>